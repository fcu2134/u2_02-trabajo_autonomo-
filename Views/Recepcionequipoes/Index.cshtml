@model IEnumerable<projecto_net.Models.Recepcionequipo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear recepción</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-sm">
        <thead class="thead-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Fecha)</th>
                <th>@Html.DisplayNameFor(model => model.TipoPc)</th>
                <th>@Html.DisplayNameFor(model => model.Accesorio)</th>
                <th>@Html.DisplayNameFor(model => model.MarcaPc)</th>
                <th>@Html.DisplayNameFor(model => model.ModeloPc)</th>
                <th>@Html.DisplayNameFor(model => model.Nserie)</th>
                <th>@Html.DisplayNameFor(model => model.CapacidadRam)</th>
                <th>@Html.DisplayNameFor(model => model.Tipoalmacenamiento)</th>
                <th>@Html.DisplayNameFor(model => model.CapacidadAlmacenamiento)</th>
                <th>@Html.DisplayNameFor(model => model.Tipogpu)</th>
                <th>@Html.DisplayNameFor(model => model.Grafica)</th>
                <th>@Html.DisplayNameFor(model => model.Cliente)</th>
                <th>@Html.DisplayNameFor(model => model.Servicio)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                    <td>@Html.DisplayFor(modelItem => item.TipoPc)</td>
                    <td>@Html.DisplayFor(modelItem => item.Accesorio)</td>
                    <td>@Html.DisplayFor(modelItem => item.MarcaPc)</td>
                    <td>@Html.DisplayFor(modelItem => item.ModeloPc)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nserie)</td>
                    <td>@Html.DisplayFor(modelItem => item.CapacidadRam)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tipoalmacenamiento)</td>
                    <td>@Html.DisplayFor(modelItem => item.CapacidadAlmacenamiento)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tipogpu)</td>
                    <td>@Html.DisplayFor(modelItem => item.Grafica)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cliente.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Servicio.Id)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
